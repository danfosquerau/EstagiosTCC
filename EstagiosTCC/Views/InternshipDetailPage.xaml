<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EstagiosTCC.ViewModels"
             mc:Ignorable="d"
             x:Class="EstagiosTCC.Views.InternshipDetailPage"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:InternshipDetailViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="tbiCancel" Text="Cancelar" Command="{Binding CancelCommand}"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout HorizontalOptions="Fill"
                     VerticalOptions="Fill"
                     Spacing="5">
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="txtCompany"
                       Text="{Binding SelectedInternship.Company}"
                       Keyboard="Text"
                       IsSpellCheckEnabled="True"
                       IsTextPredictionEnabled="True"
                       Placeholder="Empresa"
                       HorizontalOptions="FillAndExpand"/>
                <Entry x:Name="txtSector"
                       Text="{Binding SelectedInternship.Sector}"
                       Keyboard="Text"
                       IsSpellCheckEnabled="True"
                       IsTextPredictionEnabled="True"
                       Placeholder="Setor"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="txtAddress"
                       Text="{Binding SelectedInternship.Address}"
                       Keyboard="Text"
                       IsSpellCheckEnabled="True"
                       IsTextPredictionEnabled="True"
                       Placeholder="Endereço"
                       HorizontalOptions="FillAndExpand"/>
                <Entry x:Name="txtWorkSchedule"
                       Text="{Binding SelectedInternship.WorkSchedule}"
                       Keyboard="Text"
                       IsSpellCheckEnabled="True"
                       IsTextPredictionEnabled="True"
                       Placeholder="Horário"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="txtPayment"
                       Text="{Binding SelectedInternship.Payment}"
                       Keyboard="Numeric"
                       Placeholder="Bolsa em R$"
                       HorizontalOptions="FillAndExpand"/>
                <Entry x:Name="txtOtherAid"
                       Text="{Binding SelectedInternship.OtherAid}"
                       Keyboard="Text"
                       IsSpellCheckEnabled="True"
                       IsTextPredictionEnabled="True"
                       Placeholder="Auxílio Extra"
                       HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Editor x:Name="txtDescriptionOfActivities"
                        Text="{Binding SelectedInternship.DescriptionOfActivities}"
                        Keyboard="Text"
                        IsSpellCheckEnabled="True"
                        IsTextPredictionEnabled="True"
                        Placeholder="Descrição das Atividades"
                        HorizontalOptions="FillAndExpand"
                        HeightRequest="150"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="txtContact"
                       Text="{Binding SelectedInternship.Contact}"
                       Keyboard="Text"
                       IsSpellCheckEnabled="True"
                       IsTextPredictionEnabled="True"
                       Placeholder="Contato"
                       HorizontalOptions="FillAndExpand"/>
                <Button x:Name="btnLinkForMoreInfo"
                        Text="Saber Mais"
                        Command="{Binding OpenWebCommand}"
                        HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackLayout Grid.Row="0" Grid.Column="0">
                    <Label HorizontalOptions="FillAndExpand" 
                           Text="Cursos relacionados ào estágio:"/>
                    <ScrollView>
                        <ListView x:Name="lvwCoursesOfInternship"
                                  ItemsSource="{Binding ListCoursesOfInternship}"
                                  CachingStrategy="RecycleElement"
                                  HasUnevenRows="True">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout Padding="5">
                                            <Label Text="{Binding Uid}"
                                                   IsVisible="False"/>
                                            <Label Text="{Binding CourseName}"
                                                   FontSize="Small"
                                                   TextColor="Black"/>
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollView>
                </StackLayout>
            </Grid>
            <Image x:Name="imgAttachment"
                   Source="{Binding UrlAttachment}"
                   BackgroundColor="Gray"
                   HorizontalOptions="FillAndExpand"
                   VerticalOptions="FillAndExpand"
                   Scale="1"/>
        </StackLayout>
    </ScrollView>
</ContentPage>