<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="EstagiosTCC.Pages.MainPage"
             Title="Estágios TCC - Bem vindo!">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Fill" WidthRequest="400">

            <Label HorizontalOptions="CenterAndExpand" VerticalOptions="Fill"
               Text=""/>

            <Button Text="Buscar Estágio"
                Clicked="btnBuscarEstagio"
                HorizontalOptions="CenterAndExpand"
                HeightRequest="75"
                WidthRequest="300"/>

            <Button Text="Novo Estagio"
                Clicked="btnNovoEstagio" 
                HorizontalOptions="CenterAndExpand"
                HeightRequest="75"
                WidthRequest="300"/>

            <Button Text="Novo Curso"
                Clicked="btnNovoCurso" 
                HorizontalOptions="CenterAndExpand"
                HeightRequest="75"
                WidthRequest="300"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>